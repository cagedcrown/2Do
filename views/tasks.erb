<h1><%= @list_title.title %></h1>
<h2><a href="/lists"><img width="25px" src="/images/back.svg" alt="Edit">Go back to all lists</a><%= erb :new_task_form %>
</h2>

<table>
	<tr>
		<th>Task To-Do</th>
		<th>Details</th>
		<th colspan="2">Options</th>
	</tr>


	<% @tasks.each do |task| %>	
	<tr class="icon">
		<td><%= task.title %> </td>
		<td><%= task.description %> </td>
		<td><a href="/task/<%= task.id %>/edit"><img width="25px" src="/images/edit.svg" alt="Edit"></a></td>
		<td><a href="/remove/task/<%= task.id %>"><img width="25px" src="/images/delete.svg" alt="Delete"></a></td>
	</tr>
	<% end %>
</table>
